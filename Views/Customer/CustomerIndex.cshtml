@model IEnumerable<Fidly.Models.Customers>

@{
   ViewBag.Title = "CustomerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Customers</h2>

  <div class="bottom-one">
        @Html.ActionLink("Add Customer", "CustomerForm", "Customer", null, new {@class ="btn btn-primary"})
     </div>

@if(!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else 
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer Names</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink( person.Name, "Edit", "Customer", new {id = person.Id}, null)
                    </td>
                    <td>
                        @person.MembershipType.MembershipName
                    </td>
                </tr>
            }
        </tbody>


    </table>

}
