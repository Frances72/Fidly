 @model Fidly.Models.Movie 

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model == null)
{
    <p>404 Not Found - No movie for this index</p>
}
else 
{
    <div>
        <h2>@Model.Name</h2>       
    </div>
    <div>
        <ul>
            <li>Genre: @Model.Genre.GenreName</li>
            <li>Release Date: @Model.ReleaseDate</li>
            <li>Date Added: @Model.DateEntered</li>
            <li>Copies in Stock: @Model.NumberInStock</li>
        </ul>
    </div>
}
